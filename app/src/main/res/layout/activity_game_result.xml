<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/backgroundmotifs"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="32dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTp="100do"
        android:background="@color/white"
        android:gravity="center"
        android:text="Congratulations on finding the right fruit combination!\n
\nIf you want to continue playing press on star new set or restar to game to restar"
        android:textColor="@color/purple_700"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="87dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start New set"
        tools:layout_editor_absoluteX="165dp"
        tools:layout_editor_absoluteY="319dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restrat Game"
        tools:layout_editor_absoluteX="172dp"
        tools:layout_editor_absoluteY="394dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="quit game"
        tools:layout_editor_absoluteX="226dp"
        tools:layout_editor_absoluteY="540dp" />

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register my score"
        tools:layout_editor_absoluteX="103dp"
        tools:layout_editor_absoluteY="466dp" />


</RelativeLayout>